<div id="navbar" class="container-fluid">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'dashboard' class="navbar-brand"}}MM{{/link-to}}
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
      <div class="col-sm-offset-1 col-sm-8 col-md-8">
          <form class="navbar-form" {{action 'search' on='submit'}}>
            <div class="form-group" style="width:100%">
              {{input id="search-bar" type="text" class="form-control" placeholder="Search" value=query}}
              {{#link-to "dashboard.search" (query-params q=query) tagName="button"
                class="btn btn-default"}}search{{/link-to}}
            </div>
          </form>
      </div>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="" {{action 'logout'}}>Sign out</a></li>
            {{#if isAdmin}}
              <li class="divider"></li>
              {{#link-to 'admin' tagName="li"}}<a href="">Admin</a>{{/link-to}}
            {{/if}}
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
</div>
