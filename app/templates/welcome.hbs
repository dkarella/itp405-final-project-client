<div class="container-fluid text-center">
  <h1>Welcome to Music Match!</h1>
  <p>
    A place for you to connect with other musicians.
  </p>
</div>

<hr>

<div class="container">
  <!-- Log in -->
  <div class="col-sm-5 text-center">
    <h1>Log in</h1>
    <hr>
    <form {{action 'login' on='submit'}}>
      <div class="form-group">
        {{input type="text" class="form-control" placeholder="username" value=login}}
        {{input type="password" class="form-control" placeholder="password" value=login_pass}}
      </div>
      <button type="submit" class="btn btn-default">Log in</button>
    </form>
  </div>

  <!-- OR -->
  <div class="col-sm-2 text-center">
    <h1>OR</h1>
  </div>

  <!-- Sign up -->
  <div class="col-sm-5 text-center">
    <h1>Sign up</h1>
    <hr>
    <form {{action 'signup' on='submit'}}>
      <div class="form-group">
        {{input type="text" class="form-control" placeholder="first name" value=first_name}}
        {{input type="text" class="form-control" placeholder="last name" value=last_name}}
      </div>
      <div class="form-group">
        {{input type="text" class="form-control" placeholder="username" value=signup}}
        {{input type="password" class="form-control" placeholder="password" value=signup_pass}}
        {{input type="password" class="form-control" placeholder="re-enter password" value=signup_pass_verify}}
      </div>
      <button type="submit" class="btn btn-default">Sign up</button>
    </form>
  </div>

</div>
